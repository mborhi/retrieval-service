{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "strict": false,
        "noImplicitAny": true,
        "outDir": "./build",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./interfaces/**/*",
        "./tests/**/*",
        "./endpoints.config.ts",
        "./index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}