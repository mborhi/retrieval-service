{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "./build",
        "declaration": true,
        "allowJs": true,
        "target": "es5",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}